	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.1461-0248.2008.01170.x},
	keywords = {ecological networks, sampling effort, Apparent vs. real specialization, coevolution, food web structure, Mediterranean scrub, nestedness analysis, network analysis},
