	keywords = {interaction networks, pollination, functional traits, trait matching, herbivory, mutualisms, parasitism, predation, trophic interactions},
	file = {Full Text PDF:/home/rlegrand/Zotero/storage/J7BXXF74/Bartomeus et al. - 2016 - A common framework for identifying linkage rules a.pdf:application/pdf;Snapshot:/home/rlegrand/Zotero/storage/5WXIUYJ3/1365-2435.html:text/html},
